---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch with KawaiiSan.">
  <main class="container">
    <section class="contact-section">
      <div class="section-head">
        <div>
          <h1 class="contact-title">Get in Touch</h1>
          <span class="section-meta">Stalk me responsibly.</span>
        </div>
      </div>

      <div class="contact-grid">
        <a href="mailto:hello@kawaii-san.org" class="contact-card contact-card-email">
          <h3>Email</h3>
          <p>hello@kawaii-san.org</p>
        </a>

        <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="contact-card contact-card-twitter">
          <h3>Twitter</h3>
          <p>@kawaiisan</p>
        </a>

        <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="contact-card contact-card-github">
          <h3>GitHub</h3>
          <p>@kawaiisan</p>
        </a>

        <div class="contact-card">
          <h3>Discord</h3>
          <p>KawaiiSan#1234</p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
