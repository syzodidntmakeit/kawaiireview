#!/usr/bin/env bash
slug="$1"
if [ -z "$slug" ]; then
  echo "Usage: ./build <slug>"
  exit 1
fi
if [ -f "album/$slug/blog.md" ]; then
  node "$(dirname "$0")/tools/cli/build_entry.mjs" album "$slug"
elif [ -f "anime/$slug/blog.md" ]; then
  node "$(dirname "$0")/tools/cli/build_entry.mjs" anime "$slug"
else
  echo "Could not find blog.md for slug '$slug'."
  exit 1
fi
