{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "no-console": "off",
        "prefer-const": "warn",
        "no-var": "error"
    },
    "overrides": [
        {
            "files": [
                "*.astro"
            ],
            "parser": "astro-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser",
                "extraFileExtensions": [
                    ".astro"
                ]
            }
        }
    ]
}